#! /usr/bin/bash

if [ -z "$1" ]; then
    echo "No Task Provided D eg ./bin/ecs/connect-to-service s3fafklgja9j1292j"
    exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
    echo "No container name provided eg ./bin/ecs/connect-to-service jsljfa90flafja "
    exit 1
fi
CONTAINER_NAME=$2

aws ecs execute-command  \
--region $AWS_DEFAULT_REGION \
--cluster cruddur \
--task $TASK_ID \
--container $CONTAINER_NAME \
--command "/bin/bash" \
--interactive